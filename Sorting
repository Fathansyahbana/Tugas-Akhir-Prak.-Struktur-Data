#include <iostream>
using namespace std;

void tukar(int *x, int *y) {
    int temp = *x;
    *x = *y;
    *y = temp;
}

int main() {
    int n;
    int nilai[100];

    cout << "Masukkan jumlah mahasiswa: ";
    cin >> n;

    cout << "Masukkan nilai mahasiswa: " << endl;
    for (int i = 0; i < n; i++) {
        cout << "Nilai mahasiswa ke-" << i+1 << ": ";
        cin >> nilai[i];
    }

    for (int i = 0; i < n - 1; i++) {
        for (int j = 0; j < n - i - 1; j++) {
            if (nilai[j] > nilai[j + 1]) {
                tukar(&nilai[j], &nilai[j + 1]);
            }
        }
    }

    cout << "\nNilai mahasiswa setelah diurutkan (Bubble Sort): ";
    for (int i = 0; i < n; i++) {
        cout << nilai[i] << " ";
    }
    cout << endl;

    return 0;
}
